<% layout('layouts/boilerplate') %>

    <% if(searchQuery) { %>
        <div class="container mt-3">
            <h4>Search Results for: "<%= searchQuery %>"</h4>
        </div>
    <% } %>

    <% if(listings && listings.length > 0) { %>
        <div class="row row-cols-lg-4 row-cols-md-2 row-cols-1 g-3 mt-3">
            <% for (let result of listings) { %>
                <div class="col">
                    <a href="/listings/<%= result._id %>" class="text-decoration-none text-dark">
                        <div class="card h-100 listing-card">
                            <img src="<%= result.image.url %>" class="card-img-top" alt="listing_image"
                                style="height: 20rem" />
                            <div class="card-img-overlay"></div>
                            <div class="card-body">
                                <p class="card-text">
                                    <strong>
                                        <%= result.title %>
                                    </strong><br />
                                    <span>&#8377;</span>
                                    <%= typeof result.price==="number" ? result.price.toLocaleString("en-IN") : "N/A" %>
                                        /Night
                                        <i class="tax-info">&nbsp; &nbsp;&nbsp;+18% GST</i>
                                </p>
                            </div>
                        </div>
                    </a>
                </div>
                <% } %>
        </div>
    <% } else { %>
        <div class="text-center mt-5">
            <h3>No listings found</h3>
            <p>Try searching with different keywords or browse all listings.</p>
            <a href="/listings" class="btn btn-primary">Browse All Listings</a>
        </div>
    <% } %>