<% layout("./layouts/boilerplate.ejs") %>

  <div class="row mt-3">
    <div class="col-12 col-md-8 offset-md-2 text-center">
      <h3>
        <%=listingData.title%>
      </h3>
    </div>

    <div class="card col-12 col-md-6 offset-md-3 show-card listing-card">
      <img src="<%=listingData.image.url%>?t=<%= Date.now() %>" class="card-img-top show-image" alt="Listing_image" />

      <div class="card-body">
        <p class="card-text">
          Owned By <i> <b>
              <%= listingData.owner && listingData.owner.username ? listingData.owner.username : "Unknown" %>
            </b></i>
        </p>
        <p class="card-text">
          <%=listingData.description%>
        </p>

        <p class="card-text">
          <span>&#8377;</span>
          <%= typeof listingData.price==="number" ? listingData.price.toLocaleString("en-IN") : "N/A" %>
        </p>

        <p class="card-text">
          <%=listingData.location%>
        </p>
        <p class="card-text">
          <%=listingData.country%>
        </p>
      </div>
    </div>
    <br />
    <% if (typeof currUser !=='undefined' && currUser && listingData.owner && currUser._id && listingData.owner._id &&
      currUser._id.toString()===listingData.owner._id.toString()) { %>
      <div class="btns row gx-2 gy-2 justify-content-center">
        <div class="col-12 col-md-4 mb-2 mb-md-0">
          <a class="btn btn-dark edit-btn w-50% text-center" href="<%=listingData._id %>/edit">Edit</a>
        </div>
        <div class="col-12 col-md-4">
          <form method="POST" action="/listings/<%=listingData._id %>?_method=DELETE">
            <button class="btn btn-dark delete-btn w-50% text-center ">Delete</button>
          </form>
        </div>
      </div>
      <% } %>

        <div class="col-12 col-md-8 offset-md-2 mb-3">
          <% if (typeof currUser !=='undefined' && currUser) { %>
            <hr />
            <h4>Leave a Review</h4>
            <form action="/listings/<%=listingData._id %>/reviews" class="form-lable needs-validation" method="POST"
              novalidate>
              <!-- rating -->

              <div class="mb-3 mt-3">
                <label for="rating" class="form-lable">Rating</label>
                <fieldset class="starability-slot">
                  <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked
                    aria-label="No rating." />
                  <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                  <label for="first-rate1" title="Poor">1 star</label>
                  <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                  <label for="first-rate2" title="Not good">2 stars</label>
                  <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                  <label for="first-rate3" title="Average">3 stars</label>
                  <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                  <label for="first-rate4" title="Very good">4 stars</label>
                  <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                  <label for="first-rate5" title="Amazing">5 stars</label>
                </fieldset>
              </div>

              <!-- comment -->
              <div class="mb-3 mt-3">
                <label for="comment" class="form-lable"></label>
                <textarea cols="25" rows="5" class="form-control" name="review[comment]" id="comment"
                  required></textarea>
                <div class="invalid-feedback">Please add some comment for review</div>
              </div>
              <button class="btn btn-outline-dark">Submit</button>
            </form>
            <hr />
            <% } %>
              <% if (Array.isArray(listingData.reviews) && listingData.reviews.length> 0 && typeof currUser !==
                'undefined' && currUser) { %>
                <div class="row col-12">
                  <h4>All Review</h4>
                  <% for (review of listingData.reviews) { %>
                    <div class="card col-12 col-md-9 offset-md-1 mb-3 ms-3 review-card">
                      <div class="card-body">
                        <h5 class="card-title">@<%= review.author.username %>
                        </h5>
                        <p class="starability-result card-text mb-2" data-rating="<%= review.rating %>"></p>
                        <p class="card-text mb-2">
                          <%= review.comment %>
                        </p>
                      </div>
                      <form method="POST" action="/listings/<%=listingData._id%>/reviews/<%=review._id%>?_method=DELETE"
                        class="mb-3 mt-1">
                        <button class="btn btn-dark btn-sm ">Delete</button>
                      </form>
                    </div>
                    <% } %>
                </div>
                <% } %>
        </div>

        <div class="col-12 col-md-8 offset-md-2 mb-3">
          <h3>Where you'll be</h3>
          <div id="map"
            data-lat="<%= listingData.geometry && Array.isArray(listingData.geometry.coordinates) && listingData.geometry.coordinates.length > 1 ? listingData.geometry.coordinates[1] : '' %>"
            data-lng="<%= listingData.geometry && Array.isArray(listingData.geometry.coordinates) && listingData.geometry.coordinates.length > 1 ? listingData.geometry.coordinates[0] : '' %>"
            data-location="<%= listingData.location %>">
          </div>
        </div>
  </div>
  <script src="/js/map.js"></script>